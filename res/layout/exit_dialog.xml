<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exitLL"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="#999999"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topRel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:padding="5dp" >

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="Exit Application"
            android:textColor="#f5f5f5"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/sampleview"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/topRel"
        android:background="#f5f5f5" />

    <TextView
        android:id="@+id/msgTxt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/exitLL"
        android:layout_below="@+id/sampleview"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Do you want to exit the app ?"
        android:textColor="#f5f5f5"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/exitLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="No" />

        <Button
            android:id="@+id/NoBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Yes" />
    </LinearLayout>

</RelativeLayout>